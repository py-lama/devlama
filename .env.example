# Pylama Environment Variables


# PyLogs configuration
# These settings control the PyLogs integration
PYLAMA_LOG_LEVEL=INFO                # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
PYLAMA_LOG_DIR=./logs               # Directory to store log files
PYLAMA_DB_LOGGING=true              # Enable database logging for advanced querying
PYLAMA_DB_PATH=./logs/pylama.db    # Path to SQLite database for logs
PYLAMA_JSON_LOGS=false              # Use JSON format for logs (useful for log processors)

# PyLogs advanced settings
LOGLAMA_STRUCTURED_LOGGING=false      # Use structured logging with structlog
LOGLAMA_MAX_LOG_SIZE=10485760         # Maximum log file size in bytes (10 MB)
LOGLAMA_BACKUP_COUNT=5                # Number of backup log files to keep
